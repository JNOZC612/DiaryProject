<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MyDiary.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyDiary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="My Diary"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="0" >
            <Button x:Name="btnOpenD" Content="Open Diary" CornerRadius="0" Click="BtnOpenD_Click"/>
            <Button x:Name="btnSaveC" IsEnabled="False" Content="Save Changes" CornerRadius="0" Click="BtnSaveC_Click"/>
            <Button x:Name="btnNewD" Content="New Diary" CornerRadius="0" Click="BtnNewD_Click"/>
            <Button x:Name="btnDeleteD" IsEnabled="False" Content="Delete Diary" CornerRadius="0" Click="BtnDeleteD_Click"/>
            <Button x:Name="btnSettings" Content="Settings" CornerRadius="0" Click="BtnSettings_Click"/>
        </StackPanel>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition MinWidth="50" MaxWidth="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TreeView x:Name="treeDates" Grid.Column="0" Background="DodgerBlue" ItemsSource="{Binding TreeViewItems}">
                <TreeView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <ContentPresenter Tapped="ContentPresenter_Tapped" HorizontalAlignment="Stretch" Grid.Column="0" Content="{Binding Date}" VerticalAlignment="Center"/>
                            <Button Padding="0" Grid.Column="1" Content="❌" VerticalAlignment="Center" Click="RemoveItem_Click"/>
                        </Grid>
                    </DataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <CommandBar  Grid.Row="0">
                    <AppBarToggleButton x:Name="btnItalic" Icon="Italic" ToolTipService.ToolTip="Italic" Click="BtnItalic_Click"/>
                    <AppBarToggleButton x:Name="btnBold" Icon="Bold" ToolTipService.ToolTip="Bold" Click="BtnBold_Click"/>
                    <AppBarToggleButton x:Name="btnUnder" Icon="Underline" ToolTipService.ToolTip="Underline" Click="BtnUnder_Click"/>
                    <AppBarSeparator Width="50"/>
                    <AppBarElementContainer Margin="0 7 5 0" ToolTipService.ToolTip="Font Type">
                        <ComboBox x:Name="cbbFont" Height="auto"  SelectionChanged="CbbFont_SelectionChanged">
                            <ComboBoxItem Content="Arial" FontFamily="Arial" IsSelected="True"/>
                            <ComboBoxItem Content="Calibri" FontFamily="Calibri"/>
                            <ComboBoxItem Content="Cambria" FontFamily="Cambria"/>
                            <ComboBoxItem Content="Comic Sans MS" FontFamily="Comic Sans MS"/>
                            <ComboBoxItem Content="Consolas" FontFamily="Consolas"/>
                            <ComboBoxItem Content="Courier New" FontFamily="Courier New"/>
                            <ComboBoxItem Content="Georgia" FontFamily="Georgia"/>
                            <ComboBoxItem Content="Lucida Sans Unicode" FontFamily="Lucida Sans Unicode"/>
                            <ComboBoxItem Content="Segoe UI" FontFamily="Segoe UI"/>
                            <ComboBoxItem Content="Times New Roman" FontFamily="Times New Roman"/>
                            <ComboBoxItem Content="Trebuchet MS" FontFamily="Trebuchet MS"/>
                            <ComboBoxItem Content="Verdana" FontFamily="Verdana"/>
                            <ComboBoxItem Content="Wingdings" FontFamily="Wingdings"/>
                        </ComboBox>
                    </AppBarElementContainer>
                    <AppBarElementContainer Margin="0 7 0 0" ToolTipService.ToolTip="Font Size">
                        <ComboBox x:Name="cbbSize" IsEditable="True" SelectionChanged="CbbSize_SelectionChanged">
                            <ComboBoxItem Content="9"/>
                            <ComboBoxItem Content="10"/>
                            <ComboBoxItem Content="11" IsSelected="True"/>
                            <ComboBoxItem Content="12"/>
                            <ComboBoxItem Content="14"/>
                            <ComboBoxItem Content="16"/>
                            <ComboBoxItem Content="18"/>
                            <ComboBoxItem Content="20"/>
                            <ComboBoxItem Content="22"/>
                            <ComboBoxItem Content="24"/>
                            <ComboBoxItem Content="26"/>
                            <ComboBoxItem Content="28"/>
                            <ComboBoxItem Content="30"/>
                            <ComboBoxItem Content="72"/>
                        </ComboBox>
                    </AppBarElementContainer>
                    <AppBarSeparator Width="50"/>
                    <AppBarToggleButton Icon="AlignLeft" ToolTipService.ToolTip="Align Left"/>
                    <AppBarToggleButton Icon="AlignCenter" ToolTipService.ToolTip="Align Center"/>
                    <AppBarToggleButton Icon="AlignRight" ToolTipService.ToolTip="Align Right"/>
                </CommandBar>
                <RichEditBox x:Name="txtContent" Grid.Row="1" TextWrapping="Wrap" Padding="60 40 60 40" Margin="40 0 40 20" AcceptsReturn="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
