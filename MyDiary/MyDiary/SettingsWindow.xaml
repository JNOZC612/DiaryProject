<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="MyDiary.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyDiary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid>
            <StackPanel Grid.Row="0" Background="Bisque">

            </StackPanel>
            <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right" Background="Transparent">
                <Button x:Name="btnAccept" Margin="0" CornerRadius="0" Content="Accept and Restart" Click="BtnAccept_Click"/>
                <Button x:Name="btnCancel" Margin="0" CornerRadius="0" Content="Cancel" Click="BtnCancel_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
